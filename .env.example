PORT=3000
NODE_ENV=development

# MongoDB (local for development, Atlas for production)
MONGODB_URI=mongodb://localhost:27017/herd-manager
MONGODB_ATLAS_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/herd-manager?retryWrites=true&w=majority

# JWT
JWT_ACCESS_SECRET=your-access-secret-change-me
JWT_REFRESH_SECRET=your-refresh-secret-change-me
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=http://localhost:5173
